\par \pard\plain \s0\ql\widctlpar\faauto\li0\ri0\lin0\rin0\fi0\ltrpar{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\kerning1\dbch\af8\langfe2052\dbch\af10\afs24\alang1025\cf0\loch\f4\fs24\lang1051\qj\li0\ri0\lin0\rin0\fi709{\b\afs30\ab\rtlch \ltrch\loch\fs30
