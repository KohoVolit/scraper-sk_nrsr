\par \pard\plain \s26\qj\widctlpar\faauto\li0\ri0\lin0\rin0\fi708\ltrpar\dbch\af7\dbch\af10\afs28\alang1025\loch\f0\fs28\lang1051{\afs24\rtlch \ltrch\loch\fs24\loch\f5
